doctype

include mixins.jade

html
	head
		meta(charset="utf-8")
		title= api.name || 'API Documentation'
		link(rel="stylesheet", href="css/app.min.css")
		link(rel="shortcut icon", href="img/api.png", type="image/x-icon")
	body
		a.text-muted.back-to-top(href='#top')
			i.fa.fa-toggle-up
			| &nbsp;Back to top
		div.page
			.navigation
				h1= api.name || 'API Documentation'
				block nav
					+Nav(false)

			.content
				block content
					+Content('primary', false)
				footer
					p.text-muted
						| Generated by&nbsp;
						a.aglio(href="https://github.com/danielgtaylor/aglio") aglio
						| &nbsp;on #{date().format('DD MMMM YYYY, HH:mm:ss')}

		script(src="js/jquery.min.js")
		script(src="js/bootstrap.min.js")
