doctype

include mixins.jade

html
    head
        meta(charset="utf-8")
        title= api.name || 'API Documentation'
        link(rel="stylesheet", href="css/app.min.css")
        link(rel="shortcut icon", href="img/api.png", type="image/x-icon")
    body
        div.page
            .navigation
                h1= api.name || 'API Documentation'
                block nav
                    +Nav()

            .content
                block content
                    +Content('primary')
                footer
                    p.text-muted
                        | Generated by&nbsp;
                        a.aglio(href="https://github.com/danielgtaylor/aglio") aglio
                        | &nbsp;on #{date().format('DD MMMM YYYY, HH:mm:ss')}

        script(src="js/jquery.min.js")
        script(src="js/bootstrap.min.js")
        script.
            $(document).ready(function () {
                $('.schema-type-link').mouseenter(function (e) {
                    $('.schema-popup').removeClass('active');
                    $($(this).attr('href') + '-popup').addClass('active').css('left', e.pageX + 10).css('top', e.pageY + 10);
                }).mouseleave(function () {
                    $('.schema-popup').removeClass('active');
                });
            });